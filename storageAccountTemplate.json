{
    "$schema": "https://schema.management.azure.com/schemas/2020-10-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sku":{
            "type": "string"
        },
        "storageAccountName":{
            "type": "string",
            "defaultValue": "stg123default",
            "metadata": {
              "description": "Name of the storage account"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "deploystorage"
            },
            "sku": {
                "name": "[parameters('sku')]"
                
            },
            "kind": "StorageV2"
        }
    ]
}